# Libraries
begin
    require 'rubygems'
rescue LoadError
    warn "Not using RubyGems" if $DEBUG
end

require 'optparse'
require 'gettext'
require 'tempfile'

require 'const'
require 'renamer'
require 'command_line'

# Initiliazing GetText 
include GetText
p = File.join(File.dirname(__FILE__), "/../locale/")
bindtextdomain("renamer", p)

# Command Line Handling
action, arg, $VERBOSE = nil
recursive, overwrite = false

opts = Renamer::CommandLine.feed
filenames = Renamer::CommandLine.parse(opts)

# Do the real job
Renamer::CommandLine.process(action, arg, filenames, recursive, overwrite)